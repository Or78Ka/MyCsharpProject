@model TinyShelterPage.Models.EntryModel
@{
    var isEditMode = Model.AnimalId != null;
    ViewBag.Title = isEditMode ? "Edit " + Model.Name : "Add Animal";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-sm-6 col-xs-10">
        @using (Html.BeginForm(isEditMode ? "EditAnimal" : "AddAnimal", "Animals"))
        {
            @Html.HiddenFor(m => m.AnimalId)
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Type)
                <div>
                    @Html.RadioButtonFor(m => m.Type, "Cat") Cat
                    @Html.RadioButtonFor(m => m.Type, "Dog") Dog
                </div>
             </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Age)
                @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Date)
                @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">@(isEditMode ? "Save" : "Add")</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        }
    </div>
</div>
