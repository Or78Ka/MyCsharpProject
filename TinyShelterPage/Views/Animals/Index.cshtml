@model TinyShelterPage.Models.AnimalListModel

@{
    ViewBag.Title = "Animals";
}

<h2>Animals</h2>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Pets waiting to be Adopted</th>
        </tr>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Pet.Count; i++)
        {

        <tr>
            <td>@Model.Pet[i].Name</td>
            <td>@Model.Pet[i].Type</td>
            <td>@Model.Pet[i].Age</td>
            <td>@Html.ActionLink("Detail", "AnimalDetail", new { id = Model.Pet[i].AnimalId })</td>
        </tr>
       
        }
    </tbody>
</table>

		Total Pets: @Model.TotalPet

