@model TinyShelterPage.Models.EntryModel
@{
    ViewBag.Title = "Pet Detail";
}

<h2>@Model.Name</h2>

<div class="row">

    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.Type)
        <br />@Html.DisplayFor(m => m.Type)
    </div>
    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.Age)
        <br />@Html.DisplayFor(m => m.Age)
    </div>
    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.Description)
        <br />@Html.DisplayFor(m => m.Description)
    </div>
    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.Date)
        <br />@Html.DisplayFor(m => m.Date,"{0:d}")
    </div>
    <div class="col-sm-12">
        @Html.ActionLink("Edit", "AnimalEdit", new { id = Model.AnimalId }, new { @class = "btn btn-primary" })

        <a data-toggle="modal" href="@("#deleteAnimalModal")">Delete</a>
        <div class="modal fade" id="@("deleteAnimalModal")" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    @using (Html.BeginForm("DeleteAnimal", "Animals"))
                    {
                        <input type="hidden" value="@Model.AnimalId" name="AnimalId" />
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Delete @Model.Name</h4>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete @Model.Name?
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Yes</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        </div>
                    }
                </div>
            </div>
        </div>





        @Html.ActionLink("Done", "Index", null, new { @class = "btn btn-secondary" })

    </div>
</div>