@model TinyShelterPage.Models.EntryModel
@{
    ViewBag.Title = "Pet Detail";
}

<h2>@Model.Name</h2>

<div class="row">

    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.Type)
        <br />@Html.DisplayFor(m => m.Type)
    </div>
    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.Age)
        <br />@Html.DisplayFor(m => m.Age)
    </div>
    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.Description)
        <br />@Html.DisplayFor(m => m.Description)
    </div>
    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.Date)
        <br />@Html.DisplayFor(m => m.Date)
    </div>
    <div class="col-sm-12">
        @Html.ActionLink("Done", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>